        .button {
            display: inline-block;
            border-radius: 8px;
            background-color: #00a6d8;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 28px;
            font-family: 'DM Sans', sans-serif;
            padding: 20px;
            width: 150px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
}
