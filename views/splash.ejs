<main>
    <section id="top">
        <h1>
            delftory
        </h1>
        <h2><%= gamesPlayed %> 
                    <%if (gamesPlayed != 1) { %>
                        games
                    <% } else { %>
                        game
                    <% } %>
                    played, 
                    <%= playersOnline %> 
                    players online
                    <%= winRatio %>
                    current winratio of player A to B
        </h2>
        <form action="game.html" method="get" >
            <button class="button" style="vertical-align:middle"><span>play </span></button>
        </form>
        </section>
